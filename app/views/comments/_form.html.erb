<%= form_with(model: [commentable, Comment.new] ) do |form| %>
  <div class="form-group">
    <%= form.text_area :body, required: true, class: "form-control", placeholder: t('views.common.add_a_comment') %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
